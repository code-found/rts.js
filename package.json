{
  "name": "rts",
  "version": "1.0.0",
  "description": "nodejs runtime transformer,cans transform ts縲）s縲）sx縲》sx縲…ss code to nodejs code",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "bin": {
    "rts": "src/bin/index.ts"
  },
  "publishConfig": {
    "main": "dist/cjs/index.js",
    "bin": "dist/cjs/bin/index.js"
  },
  "keywords": [
    "nodejs",
    "runtime",
    "transformer",
    "typescript",
    "javascript",
    "jsx",
    "tsx",
    "css"
  ],
  "scripts": {
    "start": "node -r ./run-ts.js src/bin/index.ts",
    "dev": "node -r ./run-ts.js src/bin/index.ts",
    "build": "echo 'Build script - implement as needed'",
    "test": "ava",
    "test:watch": "ava --watch",
    "test:coverage": "c8 ava",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "format": "biome format --write .",
    "release:patch": "node -r ./run-ts.js scripts/release.ts patch",
    "release:minor": "node -r ./run-ts.js scripts/release.ts minor",
    "release:major": "node -r ./run-ts.js scripts/release.ts major",
    "release:dry-run": "node -r ./run-ts.js scripts/release.ts patch --dry-run"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@swc/core": "^1.13.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.3",
